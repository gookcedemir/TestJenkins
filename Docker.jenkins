pipeline {
    agent any
    stages {
        stage('Check Docker') {
            agent {docker {image 'maven'}}
            steps {
                sh 'mvn -v'
            }
        }
        stage('Check Cloud') {
            agent {label 'dind'}
            steps {
                sh 'docker -v'
            }
        }
        stage('Execute Python Script') {
            agent {docker {image 'python'}}
            steps {
                sh 'script.py'
            }
        }
    }
}
