pipeline {
    agent any
    stages {
        stage('Check Docker') {
            agent {docker {image 'maven'}}
            steps {
                sh 'mvn -v'
            }
        }
        stage('Check Docker Java') {
            agent {docker {image 'openjdk:8-alpine'}}
            steps {
                sh 'java -version'
            }
        }
        stage('Check Cloud') {
            agent {label 'dind'}
            steps {
                sh 'docker -v'
            }
        }
    }
}
