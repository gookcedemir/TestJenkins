pipeline {
    agent any
    environment {
        NAME = 'GÃ¶kce'
    }
    stages {
        stage('Hello') {
            environment {
                SUFFIX = '!'
            }
            steps {
                echo "Hello ${NAME} ${SUFFIX}"
                writeFile(file: 'data.txt', text: 'From Stage Hello')
                stash(name: 'demo', includes: 'data.txt')
                sh 'ls'
            }
        }
        stage('Goodbye') {
            steps {
                unstash(name:'demo')
                echo "Goodbye ${NAME}"
                readFile(file: 'data.txt')
                sh 'ls'
            }
        }
    }
}
