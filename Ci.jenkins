pipeline {
    agent any
    environment {
        NAME = 'GÃ¶kce'
    }
    stages {
        stage('Hello') {
            environment {
                SUFFIX = '!'
            }
            steps {
                echo "Hello ${NAME} ${SUFFIX}"
                writeFile file: 'newData.txt', text: 'From Stage Hello'
                stash name: 'newData', includes: 'newData.txt'
                sh 'ls'
            }
        }
        stage('Goodbye') {
            steps {
                unstash name:'demo'
                echo "Goodbye ${NAME}"
                readFile file: 'newData.txt'
                sh 'ls'
            }
        }
    }
}
