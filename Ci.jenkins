pipeline {
    agent any
    environment {
        NAME = 'GÃ¶kce'
    }
    stages {
        stage('Hello') {
            environment {
                SUFFIX = '!'
            }
            steps {
                echo "Hello ${NAME} ${SUFFIX}"
                
                script {
                    def filename = 'data.txt'
                    def chars = 'abc'
                    def text = ''
                    for (def i = 0; i < 5; i++){
                        text += chars
                    }
                    writeFile file: 'data.txt', text: text
                }
                stash name: 'demo', includes: 'data.txt'
                sh 'ls'
            }
        }
        stage('Goodbye') {
            steps {
                unstash name:'demo'
                echo "Goodbye ${NAME}"
                
                script{
                    def content = readFile file: 'data.txt'
                    env.CONTENT = content
                }
                echo "Content: ${CONTENT}"
            }
        }
    }
}
